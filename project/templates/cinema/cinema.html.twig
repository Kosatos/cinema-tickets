{# @var cinema App\Entity\Cinema #}
{% extends 'base.html.twig' %}

{% block title %}Афиша{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if cinema is not null %}
            <h1>Фильм: {{ cinema.name }}</h1>
            <p>Время воспроизведения: {{ cinema.playbackTime }}</p>
            <a href="{{ path('app_cinema') }}">Вернуться к списку.</a>
        {% else %}
            Фильм не найден, либо данные повреждены.
            <a href="{{ path('homepage') }}">Вернуться на главную.</a>
        {% endif %}
    </div>
{% endblock %}
