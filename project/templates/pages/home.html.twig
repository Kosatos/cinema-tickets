{% extends 'base.html.twig' %}

{% block nav %}
    {% set week = [
        {
            date: '2023-08-25',
            name: 'Пт',
            today: true
        },
        {
            date: '2023-08-26',
            name: 'Сб',
            today: false
        },
        {
            date: '2023-08-27',
            name: 'Вс',
            today: false
        },
        {
            date: '2023-08-28',
            name: 'Пн',
            today: false
        },
        {
            date: '2023-08-29',
            name: 'Вт',
            today: false
        },
        {
            date: '2023-08-30',
            name: 'Ср',
            today: false
        },
        {
            date: '2023-08-31',
            name: 'Чт',
            today: false
        }
    ] %}
    <nav class="page-nav">
        {% for day in week %}
            <a class="page-nav__day{% if day.today %} page-nav__day_today page-nav__day_chosen{% endif %}" href="#"
               data-date="{{ day.date }}">
                <span class="page-nav__day-week">{{ day.name }}</span><span
                        class="page-nav__day-number">{{ day.date | split('-')[2] }}</span>
            </a>
        {% endfor %}
    </nav>
{% endblock %}

{% block body %}

    <div class="sessions-wrapper">
        {% if films | length > 0 %}
            {% include 'components/session/sessions-list.html.twig' with { sessions: films} %}
        {% else %}
            <div class="sessions-error">
                В этот день сеансов нет...
                <img src="{{ asset('build/images/sad-face.png') }}" alt="sad">
            </div>
        {% endif %}
    </div>

{% endblock %}